<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="48dp"
    android:paddingBottom="16dp"
    tools:context=".ui.insurancePackages.InsurancePackagesFragment">

    <LinearLayout
        android:id="@+id/heading_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/backButtonInsuranceToHome"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="Information Button"
            android:src="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="Choose your insurance package"
            android:paddingLeft="6dp"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
    </LinearLayout>



    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/heading_wrapper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="14dp"
        android:paddingTop="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First CardView (Basic) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Basic"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/priceTextViewBasic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:text="1890 RSD"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="."
                        android:layout_marginTop="8dp" />

                    <CheckBox
                        android:id="@+id/basic_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luggage insurance"
                        android:buttonTint="@color/black" />

                    <CheckBox
                        android:id="@+id/basic_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport risks insurance"
                        android:buttonTint="@color/black" />

                    <CheckBox
                        android:id="@+id/basic_checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home insurance during trip"
                        android:buttonTint="@color/black" />

                    <CheckBox
                        android:id="@+id/basic_checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roadside assistance"
                        android:buttonTint="@color/black" />


                    <Button
                        android:id="@+id/basic_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose packet"
                        android:textColor="#ffffff"
                        android:backgroundTint="#F00E1D"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Second CardView (Standard) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Standard"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/priceTextViewStandard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:text="2390 RSD"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprehensive health insurance for you and your family."
                        android:layout_marginTop="8dp" />

                    <CheckBox
                        android:id="@+id/standard_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luggage insurance"
                        android:buttonTint="@color/black" />


                    <CheckBox
                        android:id="@+id/standard_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport risks insurance"
                        android:buttonTint="@color/black" />


                    <CheckBox
                        android:id="@+id/standard_checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home insurance during trip"
                        android:buttonTint="@color/black" />


                    <CheckBox
                        android:id="@+id/standard_checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roadside assistance"
                        android:buttonTint="@color/black" />


                    <Button
                        android:id="@+id/standard_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose packet"
                        android:textColor="#ffffff"
                        android:backgroundTint="#F00E1D"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Third CardView (Premium) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium"
                        android:textSize="26sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/priceTextViewPremium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:text="2990 RSD"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comprehensive health insurance for you and your family."
                        android:layout_marginTop="8dp" />

                    <CheckBox
                        android:id="@+id/premium_checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luggage insurance"
                        android:buttonTint="@color/black" />


                    <CheckBox
                        android:id="@+id/premium_checkbox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport risks insurance"
                        android:buttonTint="@color/black" />


                    <CheckBox
                        android:id="@+id/premium_checkbox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home insurance during trip"
                        android:buttonTint="@color/black" />


                    <CheckBox
                        android:id="@+id/premium_checkbox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roadside assistance"
                        android:buttonTint="@color/black" />


                    <Button
                        android:id="@+id/premium_package"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose packet"
                        android:textColor="#ffffff"
                        android:backgroundTint="#F00E1D"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
