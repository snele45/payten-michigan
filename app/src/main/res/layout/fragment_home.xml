<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chose the desired service"
        android:textColor="@color/crnaboja"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/insuranceButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Insurance"
        android:backgroundTint="@color/background_gray"
        android:background="@drawable/home_button"
        app:backgroundTintMode="screen"
        android:textColor="@color/crnaboja"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:gravity="center"
        app:icon="@drawable/insurance"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconTint="@color/crnaboja"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/esimButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="eSIM"
        android:backgroundTint="@color/background_gray"
        android:background="@drawable/home_button"
        app:backgroundTintMode="screen"
        android:textColor="@color/crnaboja"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:gravity="center"
        app:icon="@drawable/e_sim"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconTint="@color/crnaboja"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insuranceButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bundleButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Bundle"
        android:backgroundTint="@color/background_gray"
        android:background="@drawable/home_button"
        app:backgroundTintMode="screen"
        android:textColor="@color/crnaboja"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:gravity="center"
        app:icon="@drawable/bundle"
        app:iconGravity="textTop"
        app:iconPadding="15dp"
        app:iconTint="@color/crnaboja"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/esimButton"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/nextStepButton"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Next Step"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:backgroundTint="@color/background_gray"
        android:background="@drawable/home_button_small"
        app:backgroundTintMode="screen"
        android:textColor="@color/crnaboja"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bundleButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>