<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="32dp"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Chose the desired service"
        android:textColor="@color/crnaboja"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/insuranceButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:drawableLeft="@drawable/generali_logo"
        android:layout_marginTop="40dp"
        android:background="@drawable/white_button"
        android:padding="16dp"
        android:text="OSIGURANJE"
        android:drawablePadding="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/esimButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="16dp"
        android:drawableLeft="@drawable/esim"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_button"
        android:text="eSIM"
        android:drawablePadding="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="start|center_vertical"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insuranceButton" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bundleButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:padding="16dp"
        android:drawableLeft="@drawable/bundle"
        android:layout_marginTop="20dp"
        android:background="@drawable/red_button"
        android:text="OSTALO"
        android:drawablePadding="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="start|center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/esimButton" />

</androidx.constraintlayout.widget.ConstraintLayout>